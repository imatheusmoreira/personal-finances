<div class="ui column">
  <div class="ui raised segment">
    <h1>
      <i class="user plus icon"></i>
      Registrar
    </h1>
    <!-- include ./partials/messages -->
    <form class="ui form" action="/users/register" method="POST">
      <div class="required field">
        <label for="name">Nome</label>
        <input type="text" id="name" name="name" placeholder="Entre com seu nome" />
      </div>
      <div class="required field">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="Entre com seu Email" />
      </div>
      <div class="required field">
        <label for="password">Senha</label>
        <input type="password" id="password" name="password" placeholder="Crie uma senha" />
      </div>
      <div class="required field">
        <label for="password2">Confirme a senha</label>
        <input type="password" id="password2" name="password2" placeholder="Confirme sua senha" />
      </div>
      <button type="submit" class="ui primary button">
        Registrar
      </button>
    </form>
    <small>
      Já tem uma conta? Faça <a href="/users/login">Login</a>
    </small>
  </div>
</div>